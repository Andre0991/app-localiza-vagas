<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="@drawable/back"
    tools:context="com.example.andreperictavares.projetocompartilhamentovagasdispmoveis.Activities.MainMenuActivity">

    <TextView
        android:text="O que deseja fazer?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textColor="#D3D3D3"
        android:fontFamily="serif"
        android:textSize="30sp" />

    <Button
        android:text="@string/procurar_calcada_livre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradiente"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:onClick="goToSearchFreeParkingLocationActivity"
        android:id="@+id/searchAvailableParkingLocation"
        android:textColor="#D3D3D3" />

    <Button
        android:text="Cadastrar calçada"
        android:layout_width="match_parent"
        android:onClick="registerParkingLocation"
        android:layout_marginBottom="10dp"
        android:background="@drawable/gradiente"
        android:layout_height="wrap_content"
        android:id="@+id/registerParkingLocation"
        android:textColor="#D3D3D3" />

    <Button
        android:text="Cadastrar horário de calçada (teste - retirar depois)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goToCalcadaHorarioActivity"
        android:background="@drawable/gradiente"
        android:id="@+id/calcadaHorario"
        android:textColor="#D3D3D3" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=""
        android:id="@+id/wellcome" />

</LinearLayout>
