<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="@drawable/back"
    tools:context="com.example.andreperictavares.projetocompartilhamentovagasdispmoveis.Activities.MainMenuActivity">

    <TextView
        android:layout_marginTop="40dp"
        android:text="O que deseja fazer?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textColor="#D3D3D3"
        android:fontFamily="serif"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/wellcome"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="@string/procurar_calcada_livre"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ondeir"
        android:background="@drawable/gradiente"
        android:textAlignment="center"
        android:onClick="goToSearchFreeParkingLocationActivity"
        android:id="@+id/searchAvailableParkingLocation"
        android:textColor="#000000"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/registerParkingLocation"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Cadastrar calçada"
        android:layout_width="280dp"
        android:onClick="registerParkingLocation"
        android:background="@drawable/gradiente"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/addlocation"
        android:textAlignment="center"
        android:id="@+id/registerParkingLocation"
        android:textColor="#000000"
        android:elevation="0dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Cadastrar horário de calçada"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:onClick="goToCalcadaHorarioActivity"
        android:drawableLeft="@drawable/addhorario"
        android:background="@drawable/gradiente"
        android:id="@+id/calcadaHorario"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/registerParkingLocation"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Adicionar Automóvel"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/irpara"
        android:background="@drawable/gradiente"
        android:textAlignment="center"
        android:onClick="goToSearchFreeParkingLocationActivity"
        android:id="@+id/searchAvailableParkingLocation"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/calcadaHorario"
        android:layout_alignLeft="@+id/calcadaHorario"
        android:layout_alignStart="@+id/calcadaHorario" />


</RelativeLayout>
